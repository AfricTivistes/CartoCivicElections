---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import TestimonialsSection from "@/components/sections/testimonials/TestimonialsSection.astro";
import ClientsSection from "@/components/sections/landing/ClientsSection.astro";
import Highlight from "@/components/sections/features/Highlight.astro";
import FeaturesGeneral2 from "@/components/sections/features/FeaturesGeneral2.astro";

// Import necessary images
import salute from "public/salute.jpeg";
import discute from "public/discute.jpeg";
import telling from "public/telling.jpeg";
import pic from "public/photos-group.jpg";
import africtivistes_logo from "public/partenaires/Africtivistes.svg";
import Logo from "src/images/logo-soobu.png";
import { features } from "@/data_files/fr/features";
import { partenaires, issues } from "@/data_files/fr/data";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
  target?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Contexte",
    subTitle:
      "Les élections en Afrique sont souvent marquées par des irrégularités et des tensions, engendrant des crises pouvant provoquer des instabilités politiques. Ces dysfonctionnements affectent particulièrement les jeunes et les femmes, souvent au prix de leur liberté ou de leur vie. Face à ces défis, la société civile s’est mobilisée depuis des décennies, développant des initiatives innovantes pour renforcer l’intégrité des processus électoraux.",
    single: false,
    imgOne: salute,
    imgOneAlt: "AHEAD AFRICA",
    imgTwo: discute,
    imgTwoAlt: "AHEAD AFRICA",
  },
  {
    isRightSection: false,
    title: "",
    subTitle:
      "De Dakar à Nairobi, de Tunis à Johannesburg, des centaines d’initiatives ont vu le jour, certaines soutenues par des technologies numériques. Cependant, ces efforts restent largement sous-documentés et méconnus, réduisant leur potentiel à inspirer un changement à plus grande échelle et à favoriser l’émergence d’une démocratie participative renforcée.",
    img: telling,
    imgAlt: "AHEAD AFRICA",
    btnExists: false,
  },
  {
    isRightSection: true,
    title: "Soobu AfricTivistes",
    subTitle: `Dans le cadre de sa composante Démocratie, Élections et Gouvernance, <a href="http://africtivistes.org/" target="_blank">AfricTivistes</a>  déploie l'initiative <a href="https://africtivistes.com/en/africtivistes-cartographie-les-initiatives-citoyennes-electorales-en-afrique" target="_blank">Sóobu AfricTivistes, Tech4Elections</a>,  dédiée à cartographier, répertorier, valoriser et connecter ces contributions citoyennes à travers le continent. Cette initiative ambitionne d’inspirer l’action collective et de renforcer la gouvernance démocratique en Afrique. Le terme ”sóobu”, issu de la langue Wolof parlée en Afrique de l'Ouest, signifie "engagement, mobilisation". Il a été intégré dans le nom de l’initiative pour souligner l’engagement profond de la société civile dans la consolidation des processus électoraux et démocratiques sur le continent.
    L’initiative s’inscrit également dans le projet panafricain <a href="https://ahead.africa/fr/" target="_blank">AHEAD Africa</a>, qui vise à améliorer l’intégrité électorale et à outiller la société civile pour renforcer les processus démocratiques.`,

    single: true,
    imgOne: Logo,
    imgOneAlt: "Soobu",
    btnExists: true,
    btnTitle: "Plus sur AHEAD Africa",
    btnURL: "https://ahead.africa/fr/",
    target: "_blank",
  },
];

const pageTitle: string = `A Propos | ${SITE.title}`;
---

<MainLayout lang="fr" title={pageTitle}>
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
          target={article.target}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }

  <FeaturesGeneral2
    title="Objectifs "
    subTitle="La plateforme <i> Sóobu AfricTivistes, Tech4Elections </i> ambitionne de centraliser des données détaillées sur des initiatives citoyennes électorales tout au long du cycle électoral, mettant en lumière leur rôle clé dans la promotion de processus transparents, fiables et apaisés. En valorisant ces actions citoyennes, elle crée un espace de collaboration et de partage. Par ailleurs, elle encourage la diffusion des bonnes pratiques, inspirant citoyens et acteurs politiques à travers des outils et données fiables, pour renforcer des processus électoraux inclusifs et respectueux des droits fondamentaux."
    features={features}
    src={pic}
  />

  <Highlight
    title="Les enjeux de la plateforme"
    subTitle="La plateforme  <i> Sóobu AfricTivistes, Tech4Elections </i> répond à des enjeux de consolidation de la démocratie en Afrique. Face à la montée des défis tels que l'accaparement des institutions, la manipulation des constitutions, l’exclusion de groupes vulnérables, les fraudes, les cyber-menaces électorales, la désinformation, elle se positionne comme un outil stratégique pour renforcer la transparence et la confiance dans les processus électoraux. "
    highlights={issues}
  />

  <TestimonialsSection
    title="Données agrégées"
    subTitle="La plateforme collecte, centralise et organise des données qualitatives et quantitatives sur les initiatives citoyennes électorales en Afrique depuis 2010. Ces informations incluent la typologie des initiatives, leurs domaines d'intervention, leurs objectifs, leurs cibles et leur portée géographique. Les données sont recueillies via des questionnaires, des recherches documentaires et des entretiens, garantissant une approche exhaustive et fiable. Ces informations offrent un accès précieux à des outils et des ressources permettant de renforcer leur impact sur les processus électoraux."
    ;
    statistics={[
      {
        count: "60+",
        description: "Initiatives citoyennes électorales",
      },
      {
        count: "8",
        description: "Catégories d'initiatives",
      },
      {
        count: "20+",
        description: "Pays",
      },
      {
        count: "4",
        description: "Régions geographiques",
      },
    ]}
  />

  <ClientsSection
    title="Partenaires"
    subTitle="Le projet est co-financé par l’Union européenne et mis en oeuvre par un consortium constitué de réseaux d’observation électorale et de soutien à la démocratie."
    partenaires={partenaires}
  />
</MainLayout>

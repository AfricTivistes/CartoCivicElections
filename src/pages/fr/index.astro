---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesMap from "@components/sections/features/FeaturesMap.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import Copyright from "@/components/sections/landing/Copyright.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import { partenaires, africTivistes } from "@/data_files/fr/data";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/hero.png";
import faqs from "@data/fr/faqs.json";
import africtivistes from "public/partenaires/Africtivistes.svg";
import {
  features,
  featuresTabs,
  formulaireLink,
} from "@/data_files/fr/features";
import featureImage from "@images/image_ahead.png";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout lang="fr">
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Soumettre une initiative"
    url={formulaireLink}
  />

  <HeroSection
    title=`Cartographie des initiatives citoyennes électorales en  <span
        class="text-primary-green dark:text-primary-green">Afrique</span>`
    subTitle="Recenser et cartographier les initiatives citoyennes relatives aux élections à travers le continent africain."
    primaryBtn="Commencez à explorer"
    primaryBtnURL="#featuresGeneral"
    secondaryBtn="Soumettre une initiative"
    secondaryBtnURL={formulaireLink}
    withReview={false}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.8</span> / 5`
    starCount={4}
    reviews=`À partir de plus de <span class="font-bold">12,8k</span> avis`
    src={heroImage}
    alt="Pile de boîtes de produits ScrewFast contenant des outils matériels assortis"
  />

  <FeaturesMap
    title="Soobu : La base de données des initiatives citoyennes électorales en Afrique"
  />

  <FeaturesGeneral features={features} />

  <FeaturesNavs
    title=`Enjeux de la plateforme <span class="text-primary-orange dark:text-primary-orange">Soobu</span>`
    tabs={featuresTabs}
  />

  <FAQ title="Questions<br />fréquemment posées" faqs={faqs} />

  <HeroSectionAlt
    title="Construisons ensemble"
    subTitle="Rejoignez-nous et contribuez à l'enrichissement de la base de données des initiatives citoyennes électorales à travers l'Afrique."
    url={formulaireLink}
  />

  <Copyright
    title=""
    subTitle="Ce programme est soutenu et mis en œuvre par AfricTivistes dans le cadre du projet AHEAD Africa."
    partenaires={africTivistes}
  />
</MainLayout>

// This gets the static paths for all the unique products
export async function getStaticPaths() {
  const tableId = "m9erh9bplb8jihp";
  const query = {
    viewId: "vwdobxvm00ayso6s",
    fields: [
      "Nom de l'initiative",
      "Pays",
      "Cat√©gorie de l'initiative",
      "Th√©matique de l'initiative",
      "Description"
    ],
    where: "(Status,eq,Traiter)~and(Langue,eq,en)",
  };

  const productEntries = await getAll(tableId, query);

  return productEntries.list.map((product) => {
    const initiativeName = product["Nom de l'initiative"];
    const imageLogo = product["image-logo"];

    const productSlug =
      typeof initiativeName === "string" ? slug(initiativeName) : "";
    return {
      params: { slug: productSlug },
      props: { product },
    };
  });
}


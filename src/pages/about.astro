---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import TestimonialsSection from "@/components/sections/testimonials/TestimonialsSection.astro";
import FeaturesGeneral from "@/components/sections/features/FeaturesGeneral.astro";
import ClientsSection from "@/components/sections/landing/ClientsSection.astro";
import Highlight from "@/components/sections/features/Highlight.astro";

// Import necessary images
import salute from "public/salute.jpeg";
import discute from "public/discute.jpeg";
import telling from "public/telling.jpeg";
import { featuresAbout } from "@/data_files/fr/features";
import { partenaires, issues } from "@/data_files/fr/data";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Contexte",
    subTitle:
      "Les élections en Afrique sont souvent émaillées d’irrégularités et de tensions socio-politiques. Dans le cadre du projet AHEAD Africa axé sur les multiples facettes du cycle électoral en Afrique, AfricTivistes publie un formulaire pour cartographier les initiatives de la société civile africaine liées aux processus électoraux sur le continent depuis 2010.",
    single: false,
    imgOne: salute,
    imgOneAlt: "AHEAD AFRICA",
    imgTwo: discute,
    imgTwoAlt: "AHEAD AFRICA",
  },
  {
    isRightSection: false,
    title: "Présentation",
    subTitle:
      "La plateforme Cartographie des initiatives citoyennes électorales en Afrique (CISCAfrica) vise à recenser et cartographier les initiatives citoyennes relatives aux élections à travers le continent africain depuis 2010 ",
    img: telling,
    imgAlt: "AHEAD AFRICA",
    btnExists: false,
  },
];

const pageTitle: string = `About | ${SITE.title}`;
---

<MainLayout lang="en" title={pageTitle}>
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }

  <FeaturesGeneral
    title="Objectifs "
    subTitle="La plateforme Cartographie des initiatives citoyennes électorales en Afrique (CISCAfrica) vise à recenser et cartographier les initiatives citoyennes relatives aux élections à travers le continent africain depuis 2010"
    features={featuresAbout}
  />

  <Highlight
    title="Lorem ipsum dolor sit amet"

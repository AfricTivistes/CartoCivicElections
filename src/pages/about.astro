---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import TestimonialsSection from "@/components/sections/testimonials/TestimonialsSection.astro";
import ClientsSection from "@/components/sections/landing/ClientsSection.astro";
import Highlight from "@/components/sections/features/Highlight.astro";
import FeaturesGeneral2 from "@/components/sections/features/FeaturesGeneral2.astro";

// Import necessary images
import salute from "public/salute.jpeg";
import discute from "public/discute.jpeg";
import telling from "public/telling.jpeg";
import pic from "public/photos-group.jpg";
import Logo from "src/images/logo-soobu.png";
import { features } from "@/data_files/features";
import { partenaires, issues } from "@/data_files/data";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
  target?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Context",
    subTitle:
      "Elections in Africa are often marked by irregularities and tensions, resulting in crises that can lead to political instability. These malfunctions particularly affect young people and women, often at the cost of their freedom or their lives. Faced with these challenges, civil society has been mobilising for decades, developing innovative initiatives to strengthen the integrity of electoral processes.",
    single: false,
    imgOne: salute,
    imgOneAlt: "AHEAD AFRICA",
    imgTwo: discute,
    imgTwoAlt: "AHEAD AFRICA",
  },
  {
    isRightSection: false,
    title: "",
    subTitle:
      "From Dakar to Nairobi, from Tunis to Johannesburg, hundreds of initiatives have been developed, some backed by digital technologies. However, these efforts remain largely undocumented and unrecognised, reducing their potential to inspire change on a larger scale and foster the rise of a stronger participatory democracy",
    img: telling,
    imgAlt: "AHEAD AFRICA",
    btnExists: false,
  },
  {
    isRightSection: true,
    title: "Soobu AfricTivistes",
    subTitle: `As part of its Democracy, Elections and Governance component, <a class='text-primary-green' href="https://africtivistes.com/en/home/" target="_blank">AfricTivistes</a>   is rolling out the <a class='text-primary-green' href="https://africtivistes.com/en/africtivistes-maps-citizen-electoral-initiatives-in-africa/" target="_blank">Sóobu AfricTivistes, Tech4Elections</a> initiative, dedicated to mapping, cataloguing, enhancing and connecting these citizen contributions across the continent. The initiative aims to inspire collective action and strengthen democratic governance in Africa. The word ‘sóobu’, from the Wolof language spoken in West Africa, means ‘commitment, mobilisation’. It has been incorporated into the name of the initiative to underline the commitment of civil society to consolidating electoral and democratic processes on the continent.

    The initiative is also part of the pan-African project <a class='text-primary-green' href="https://ahead.africa/fr/" target="_blank">AHEAD Africa</a>, which aims to improve electoral integrity and equip civil society to strengthen democratic processes.`,

    single: true,
    imgOne: Logo,
    imgOneAlt: "Soobu",
    btnExists: true,
    btnTitle: "More about AHEAD Africa",
    btnURL: "https://ahead.africa",
    target: "_blank",
  },
];

const pageTitle: string = `About | ${SITE.title}`;
---

<MainLayout lang="en" title={pageTitle}>
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
          target={article.target}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }

  <FeaturesGeneral2
    title="Objective"
    subTitle="The <i> Sóobu AfricTivistes, Tech4Elections </i>  aims to centralise detailed data on the citizen election initiatives throughout the electoral cycle, highlighting their key role in promoting transparent, reliable and peaceful processes. By highlighting these citizen initiatives, it creates a space for collaboration and sharing. It also encourages the dissemination of good practice, inspiring citizens and political players through reliable tools and data, to strengthen electoral processes that are inclusive and respect fundamental rights."
    features={features}
    src={pic}
  />

  <Highlight
    title="Stakes"
    subTitle="The <i> Sóobu AfricTivistes, Tech4Elections </i> platform responds to the challenges of consolidating democracy in Africa. In light of rising governance failings such as institutional capture, manipulation of constitutions, exclusion of vulnerable groups, fraud, cyber electoral threats and disinformation, the platform is being positioned as a strategic tool for strengthening transparency and confidence in electoral processes."
    highlights={issues}
  />

  <TestimonialsSection
    title="Aggregated data"
    subTitle="The platform gathers, centralises and organises qualitative and quantitative data on citizens' electoral initiatives in Africa since 2010. This information includes the types of initiatives, their areas of intervention, their objectives, their targets and their geographical scope. The data is collected using a combination of questionnaires, desk reviews and interviews, ensuring a comprehensive and reliable approach. This information provides valuable access to tools and resources to enhance their impact on electoral processes."
    ;
    statistics={[
      {
        count: "60+",
        description: "Citizens' election initiatives",
      },
      {
        count: "8",
        description: "Categories of initiatives",
      },
      {
        count: "20+",
        description: "Countries",
      },
      {
        count: "4",
        description: "Geographical areas",
      },
    ]}
  />

  <ClientsSection
    title="Partners"
    subTitle="The project is co-funded by the European Union and implemented by a consortium of election observation and democracy support networks."
    partenaires={partenaires}
  />
</MainLayout>

---
// Define props from Astro
const { title, subTitle } = Astro.props;

// Define TypeScript interface for props
interface Props {
  title: string;
  subTitle?: string;
}

const partenaires = [
  {
    logo: "src/images/partenaires/Africtivistes.svg",
    name: "AfricTivistes",
    href: "https://www.africtivistes.com/",
  },
  {
    logo: "src/images/partenaires/AfEONET.jpg",
    name: "AfEONET",
    href: "https://acfim.org/afeonet/",
  },
  {
    logo: "src/images/partenaires/E-HORN.jpg",
    name: "E-HORN",
    href: "https://ehorn.org/",
  },
  {
    logo: "src/images/partenaires/EPD.png",
    name: "EPD",
    href: "https://epd.eu/",
  },
  {
    logo: "src/images/partenaires/ESN-SA.jpg",
    name: "ESN-SA",
    href: "https://www.esn-sa.org/",
  },
  {
    logo: "src/images/partenaires/WAEON.png",
    name: "WAEON",
    href: "https://www.waeon.org/",
  },
  {
    logo: "src/images/partenaires/ZESN.png",
    name: "ZESN",
    href: "https://www.zesn.org.zw/",
  },
];
---

<section class="px-8 py-8 lg:py-20">
  <!-- Title and description -->
  <div class="mx-auto max-w-3xl space-y-4 text-center">
    <h2
      class="text-balance text-2xl font-bold leading-tight text-neutral-800 dark:text-neutral-200 sm:text-3xl"
    >
      {title}
    </h2>
    {
      subTitle && (
        <p class="text-pretty leading-tight text-neutral-600 dark:text-neutral-400">
          {subTitle}
        </p>
      )
    }
    <div class="container mx-auto text-center">
      <div class="flex flex-wrap items-center justify-center gap-8">
        {
          partenaires.map((partenaire) => (
            <a href={partenaire.href} target="_blank">
              <img
                src={partenaire.logo}
                alt={partenaire.name}
                class="w-20"
              />
            </a>
          ))
        }
      </div>
    </div>
  </div>
</section>
